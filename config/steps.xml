<?xml version="1.0" encoding="UTF-8" ?>
<steps>
  <step id='1'>
    <name>detect_mobile_operator</name>
    <display_name>Detect Mobile Operator</display_name>
    <description>Detect Mobile Operator</description>
    <manifest>http://{service_domain}/steps/detect_mobile_operator/manifest</manifest>
    <input>
      <variables>
        <variable name="address" display_name="Address" description="The number to detect operator" type="alphanumeric"/>
      </variables>
    </input>
    <output type="variables">
      <variables>
        <variable name="mobile_operator_code" display_name="Mobile operator code" description="The mobile operator code" type="numeric"/>
      </variables>
    </output>
  </step>
  <step id='2'>
    <name>date</name>
    <display_name>Date</display_name>
    <description>Returning the current datetime</description>
    <manifest>http://{service_domain}/steps/date/manifest</manifest>
    <input>
      <variables>
        <variable name="unit" display_name="Date unit" description="Unit of date(day/week/month/year)" type="numeric"/>
        <variable name="value" display_name="Value" description="Number of unit(day/week/month/year) ago" type="numeric"/>
      </variables>
    </input>
    <output type="variables">
      <variables>
        <variable name="date" display_name="Date" description="Current datetime" type="text"/>
      </variables>
    </output>
  </step>
</steps>
