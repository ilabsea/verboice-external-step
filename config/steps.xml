<?xml version="1.0" encoding="UTF-8" ?>
<steps>
  <step id='1'>
    <name>detect_mobile_operator</name>
    <display_name>Detect Mobile Operator</display_name>
    <description>Detect Mobile Operator</description>
    <manifest>http://{service_domain}/detect_operator</manifest>
    <input>
      <variables>
        <variable name="phone_number" display_name="Phone number" description="The number to detect operator" type="alphanumeric"/>
      </variables>
    </input>
    <output type="variables">
      <variables>
        <variable name="mobile_operator_code" display_name="Mobile operator code" description="The mobile operator code" type="numeric"/>
        <variable name="testing" display_name="testing" description="testing" type="testing"/>
      </variables>
    </output>
  </step>
  <step id='2'>
    <name>date</name>
    <display_name>Date</display_name>
    <description>Returning the current datetime</description>
    <manifest>http://{service_domain}/date</manifest>
    <input>
      <variables>
        <variable name="number" display_name="Day ago" description="Date" type="numeric"/>
        <variable name="testing" display_name="testing" description="testing" type="testing"/>
      </variables>
    </input>
    <output type="variables">
      <variables>
        <variable name="date" display_name="Date" description="Current datetime" type="text"/>
      </variables>
    </output>
  </step>
</steps>
