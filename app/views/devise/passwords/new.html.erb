<h2>Forgot your password?</h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { class: 'form', method: :post }) do |f| %>
  <%= devise_error_messages! %>

  <div class="field-block">
    <%= f.label :email %>
    <%= f.email_field :email, class: 'form-control input-lg', autofocus: true %>
  </div>

  <div class="actions">
    <%= f.submit "Send me reset password instructions", class: 'btn btn-primary' %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
