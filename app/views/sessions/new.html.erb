<div class="container">
    <%= form_for(@login_form, url: sessions_path, html: { class: "form-signin" }) do |f| %>
      <h2>Sign in</h2>
      <div class="field">
        <%= f.email_field :email, class: 'form-control', placeholder: 'Email', autofocus: true %>
      </div>

      <div class="field">
        <%= f.password_field :password, class: 'form-control', placeholder: 'Password', autocomplete: "off" %>
      </div>

      <div class="actions">
        <%= f.submit "Log in", class: 'btn btn-lg btn-primary btn-block' %>
      </div>

    <% end %>
</div>
