<table class="table table-hover">
	<thead>
		<tr>
			<th>#</th>
			<th>Login</th>
			<th>Role</th>
			<th>Action</th>
		</tr>
	</thead>
	<tbody>
		<% @users.each_with_index do |user, index| %>
			<tr>
				<td scope='row'><%= index + 1 %></td>
				<td><%= user.email %></td>
				<td><%= user.role_name %></td>
				<td><%= link_to 'Delete', account_path(user), method: :delete, confirm: 'Are you sure, you want to delete?', class: 'btn btn-danger btn-xs' %></td>
			</tr>
		<% end %>
	</tbody>
</table>

<%= link_to 'New User', new_account_path, class: 'btn btn-primary btn-sm' %>

